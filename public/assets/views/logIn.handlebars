<div class="container my-5">
	<div class="jumbotron">
		<h1>USER LOGIN</h1>
		<br />
		<form
			class="form"
			action="/login"
			method="post"
			role="form"
			autocomplete="off"
		>

			<div class="form-group">
				<input
					id="nombre"
					name="username"
					placeholder="nombre"
					class="form-control"
					type="text"
					required
				/>
			</div>

			<div class="form-group">
				<input
					id="password"
					name="password"
					placeholder="password"
					class="form-control"
					type="password"
					required
				/>
			</div>

			<div class="form-group">
				<input class="btn btn-success my-3" type="submit" value="LOGIN" />

			</div>

		</form>

		<hr />
		<div class="text-left">
			<button
				class="btn btn-success my-3"
				onclick="location.href = '/register'"
			>SIGN UP</button>
		</div>
	</div>
</div>